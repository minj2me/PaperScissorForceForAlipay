/* 按钮样式 */
.play_box{
  position: relative;
  margin-top: 40rpx;
  text-align: center;
}
.play_box :last-child{
  margin-top: 40rpx;
}
.play_btn{
  width: 280rpx;
  height: 280rpx;
}
.bg_icon{
  width: 202rpx;
  height: 84rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.bg_icon_two{
  width: 152rpx;
  height: 60rpx;
  position: absolute;
  left: 0;
  top: -40rpx;
}
.bg_icon_three{
  width: 153rpx;
  height: 32rpx;
  position: absolute;
  right: 50rpx;
  bottom: -40rpx;
}
.advertising_space{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background-color: #fff;
}
.tips{
  margin-top: 50rpx;
  color:#fff;
  font-size: 30rpx;
  text-align: center;
}














